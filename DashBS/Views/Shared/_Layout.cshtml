<!DOCTYPE html>
<html lang="en">
<head>
  @await Html.PartialAsync("_Metas")
  <title>@ViewData["Title"] - DashBS</title>
  @await Html.PartialAsync("_Styles")
  @await RenderSectionAsync("Styles", required: false) <!-- For page level styles -->
</head>
<body>

  <div class="sidebar">
    <h4 class="text-white text-center py-3">Admin</h4>
    <a href="/Admin/Dashboard">Dashboard</a>
    <a href="/Admin/Users">Users</a>
    <a href="/Admin/Settings">Settings</a>
  </div>
  <div class="main-content">
    <nav class="navbar navbar-light bg-light mb-4">
      <span class="navbar-brand">Admin Panel</span>
    </nav>

    @RenderBody()
    @await Html.PartialAsync("_Footer")
    @await Html.PartialAsync("_Scripts")
    @await RenderSectionAsync("Scripts", required: false) <!-- For page level scripts -->
  </div>

  <!-- Sidebar will come here or it will be in "_Header" partial -->
  <!-- Topbar / Navbar will come also -->

  @* @await Html.PartialAsync("_Header")

  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div> *@

  
</body>
</html>
